<div class="container">
  <%= link_to 'Back', job_path(@job), class:"btn btn-default pull-left btn-back" %>
  <%= form_for @job, :html => {:class => "form-horizontal center-block"} do |f| %>
    <h2 class="form-group title">Milestones</h2>
    <%= f.hidden_field :job_id, :value => current_job[:id] %>
    <div class="form-group well">
      <h4 class="pull-left inline">Milestone Title</h4>
      <h4 class="pull-right inline">Accomplished?</h4>
      <%= f.fields_for :milestones do |ff| %>
        <%= ff.text_field :title, class: "form-control accent-text inline pull-left", id: "mil-title-form" %>
        <%= ff.check_box :status, class: "inline pull-right", id: "mil-status-form" %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default sub-btn" %>
    </div>
  <% end %>

</div>
