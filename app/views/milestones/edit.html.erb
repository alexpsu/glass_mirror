<div class="container">

  <%= form_for @job, :html => {:class => "form-horizontal center-block"} do |f| %>
    <h2 class="form-group accent-text title">Milestones</h2>
    <%= f.hidden_field :job_id, :value => current_job[:id] %>
    <div class="form-group">
      <%= f.fields_for :milestones do |ff| %>
        <%= ff.label :title, "title", class: "control-label" %>
        <%= ff.text_field :title, class: "form-control accent-text" %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default form-control" %>
    </div>
  <% end %>

</div>
