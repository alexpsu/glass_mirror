<div class="container">
  <%= link_to 'Back', job_path(current_job), class:"btn btn-default pull-left btn-back" %>
  <%= form_for @milestone, :html => {:class => "form-horizontal center-block"} do |f| %>
    <h2 class="form-group title">Milestones</h2>
    <%= f.hidden_field :job_id, :value => current_job[:id] %>
    <div class="form-group well">
      <%= f.label :title, "Title", class: "control-label" %>
      <%= f.text_field :title, class: "form-control accent-text" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default sub-btn" %>
    </div>
  <% end %>

</div>
