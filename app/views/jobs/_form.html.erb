<div class="container">
  <%= link_to 'Back', user_path(current_user), class:"btn btn-default pull-left" %>

  <%= form_for @job, :html => {:class => "form-horizontal center-block"} do |f| %>
    <% if @job.user == current_user %>
      <h2 class="form-group accent-text title">Edit Job</h2>
    <% else %>
      <h2 class="form-group accent-text title">Add Job</h2>
    <% end %>
    <div class="form-group">
      <%= f.label :company, "Company", class: "control-label" %>
      <%= f.text_field :company, :required => true, class: "form-control accent-text" %>
    </div>
    <div class="form-group">
      <%= f.label :title, "Job Title", class: "control-label" %>
      <%= f.text_field :title, :required => true, class: "form-control accent-text" %>
    </div>
    <div class="form-group">
      <%= f.label :location, "Location", class: "control-label" %>
      <%= f.text_field :location, class: "form-control accent-text" %>
    </div>
    <div class="form-group">
      <%= f.label :url, "Link to Application", class: "control-label" %>
      <%= f.text_field :url, class: "form-control accent-text" %>
    </div>
    <div class="form-group">
      <%= f.label :discovery, "How did you find it?", class: "control-label" %>
      <%= f.text_field :discovery, class: "form-control accent-text" %>
    </div>
    <div class="form-group">
      <%= f.label :interest_level, "How interested are you?", class: "control-label" %>
      <%= f.number_field :interest_level, placeholder: "1-5", class: "form-control accent-text" %>
    </div>
    <div class="form-group">
      <%= f.label :notes, "Extra Notes", class: "control-label" %>
      <%= f.text_area :notes, class: "form-control accent-text" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default form-control" %>
    </div>
  <% end %>

</div>
