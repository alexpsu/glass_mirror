<div class="btn-group">
  <div class="splash-btn btn-del">
    <%= button_to "edit profile", edit_user_path(@user.id), method: :get, class: 'btn btn-xs btn-light center-block' %>
  </div>
  <div class="splash-btn btn-del">
    <%= button_to "remove profile", @user, method: :delete, class: 'btn btn-xs btn-light center-block'  %>
  </div>
</div>
<div class="container">
  <div class="text-center">
    <% if @user.jobs.length == 0 %>
      <div>
       	<h1 class="title">Welcome <%= @user.first_name %> <%= @user.last_name %></h1>
      </div>
        <h3>To get started click the button below!</h3>
    <% else %>
      <h1 class="title">Hello <%= @user.first_name %></h1>
    <% end %>
  </div>
</div>
<br />
<div class="button text-center">
  <%= button_to "Add Job", new_job_path, method: :get, class: 'btn btn-add center-block'  %>
</div>

<div class="job-container center-block">
  <table class="table table-hover">
    <tbody>
      <% @user.jobs.each do |job| %>
        <tr>
          <td>
            <h4 class="accent-text splash-btn"><%=link_to "#{job.title}", job_path(job.id), class: "accent-text" %></h4> <h5 class="sec-text splash-btn">at</h5>
            <h4 class="accent-text splash-btn"><%= job.company %>.</h4> <h5 class="sec-text splash-btn">Last Milestone</h5>
            <h5 class="accent-text splash-btn"><%= job.find_last.title %> <%= time_ago_in_words(job.find_last.updated_at) %> ago</h5>
            <div class="pull-right icon">
              <%= link_to "", edit_job_path(job.id), class: 'glyphicon glyphicon-pencil' %>
              <%= link_to "", job, method: :delete, class: 'glyphicon glyphicon-remove' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
