<%= form_for @user, :html => {:class => "form-horizontal center-block"} do |f| %>

  <% if current_user == @user %>
    <h2 class="form-group title"><%= @user.first_name%>'s info</h2>
  <% else %><br>
    <h2 class="form-group title">Signup</h2>
  <% end %>
  <div class="form-group well">
    <div class="form-group">
      <%= f.label :first_name, "First Name", class: "control-label" %>
      <%= f.text_field :first_name, :required => true, class: "form-control accent-text" %>
    </div>
    <div class="form-group">
      <%= f.label :last_name, "Last Name", class: "control-label" %>
      <%= f.text_field :last_name, :required => true, class: "form-control accent-text" %>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email", class: "control-label" %>
      <%= f.text_field :email, :required => true, class: "form-control accent-text" %>
    </div>
    <% if current_user == @user %>
      <div class="form-group">
        <%= f.label :password, "Password", class: "control-label" %>
        <%= f.password_field :password, class: "form-control accent-text" %>
      </div>
    <% else %>
      <div class="form-group">
        <%= f.label :password, "Password", class: "control-label" %>
        <%= f.password_field :password, :required => true, class: "form-control accent-text" %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :interest, "Interest (separate by '\,')", class: "control-label" %>
      <%= f.text_field :interest, placeholder: "Ex. Mechanical Engineering, Software Engineering", class: "form-control accent-text" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default sub-btn" %>
    </div>
  </div>
<% end %>
