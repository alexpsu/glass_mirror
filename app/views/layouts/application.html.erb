<!DOCTYPE html>
<html>
<head>
  <title>GlassMirror</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% if current_user %>
        <%= link_to "Glass Mirror", user_path(current_user), class: "navbar-brand", id: "nav-title" %>
      <% else %>
        <a class="navbar-brand" id="nav-title" href="/">Glass Mirror</a>
      <% end %>
    </div><!-- /.navbar-collapse -->

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Log Out", destroy_session_path %></li>
        <% else %>
            <li><%= link_to "Signup", new_user_path %></li>
            <li><%= link_to "Log In", new_session_path %></li>
        <% end %>
      </ul>
  </div><!-- /.container-fluid -->
  </nav>
  <br>

  <div>
    <% flash.each do |name, msg| %>
      <div id="flash_messages">
      <br>
        <div class="alert alert-info" role="alert">
          <%= msg %>
        </div>
      </div>
    <% end %>
  </div>


<%= yield %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</body>
</html>
