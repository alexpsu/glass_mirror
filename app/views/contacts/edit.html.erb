<div class="container">
  <%= link_to 'Back', job_path(@contact.job), class:"btn btn-default pull-left btn-back" %>

  <%= form_for @contact, :html => {:class => "form-horizontal center-block"} do |f| %>
    <h2 class="form-group title">Edit Contact</h2>
    <div class="form-group well">
      <%= f.hidden_field :job_id, :value => @contact.job.id %>
      <div class="form-group">
        <%= f.label :name, "Name", class: "control-label" %>
        <%= f.text_field :name, :required => true, class: "form-control accent-text" %>
      </div>
      <div class="form-group">
        <%= f.label :email, "Email", class: "control-label" %>
        <%= f.text_field :email, :required => true, class: "form-control accent-text" %>
      </div>
      <div class="form-group">
        <%= f.label :phone, "Phone Number", class: "control-label" %>
        <%= f.text_field :phone, class: "form-control accent-text" %>
      </div>
      <div class="form-group">
        <%= f.label :web, "Linkedin", class: "control-label" %>
        <%= f.text_field :web, class: "form-control accent-text" %>
      </div>
      <div class="form-group">
        <%= f.label :notes, "Notes", class: "control-label" %>
        <%= f.text_area :notes, class: "form-control accent-text" %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: "btn btn-default sub-btn" %>
      </div>
    </div>
  <% end %>

</div>
