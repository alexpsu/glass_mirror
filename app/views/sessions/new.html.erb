<div class="form-container">
  <%= link_to 'Back', root_path, class:"btn btn-default btn-back" %>

  <%= form_for @user, url: "/sessions", method: "post", :html => {:class => "form-horizontal center-block"} do |f| %>
    <h2 class="title form-group">Login</h2>
    <div class="form-group well">
      <div class="form-group">
        <%= f.label :email, class: "control-label" %>
        <%= f.text_field :email, :required => true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "control-label" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Log In", class: "btn btn-default sub-btn" %>
      </div>
    </div>
  <% end %>
</div>
