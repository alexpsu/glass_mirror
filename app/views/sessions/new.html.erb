<h2 class="form-group text-center">Login</h2>

<%= form_for @user, url: "/sessions", method: "post", :html => {:class => "form-horizontal center-block"} do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "control-label" %>
    <%= f.text_field :email, :required => true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "control-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Log In", class: "btn btn-default btn-purple center-bl form-control" %>
  </div>
<% end %>
